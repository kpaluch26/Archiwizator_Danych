<Window 
        x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:xrpb="http://XamlRadialProgressBar/DotNet"
        xmlns:local="clr-namespace:Client"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d" Height="600" Width="1080" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Foreground="White" Icon="/client.png" Title="Archiwizator danych - klient">

    <Window.Resources>
        <Storyboard x:Key="MenuOpen">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="grd_Menu">
                <EasingDoubleKeyFrame KeyTime="0" Value="60"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="220"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuClose" >
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="grd_Menu">
                <EasingDoubleKeyFrame KeyTime="0" Value="220"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="60"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="ArchivePanelOptionsShow">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="Margin" BeginTime="00:00:00" Storyboard.TargetName="grd_ArchivePanelCreateOptions">
                <SplineThicknessKeyFrame KeyTime="00:00:00" Value="460,126,10,120"/>
                <SplineThicknessKeyFrame KeyTime="00:00:01" Value="970,126,10,120"/>
            </ThicknessAnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="Margin" BeginTime="00:00:00" Storyboard.TargetName="flp_ArchivePanelOptionsCard">
                <SplineThicknessKeyFrame KeyTime="00:00:00" Value="0,134,310,0"/>
                <SplineThicknessKeyFrame KeyTime="00:00:01" Value="0,134,51,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="ArchivePanelOptionsHide">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="Margin" BeginTime="00:00:00" Storyboard.TargetName="grd_ArchivePanelCreateOptions">
                <SplineThicknessKeyFrame KeyTime="00:00:00" Value="970,126,10,120"/>
                <SplineThicknessKeyFrame KeyTime="00:00:01" Value="460,126,10,120"/>
            </ThicknessAnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="Margin" BeginTime="00:00:00" Storyboard.TargetName="flp_ArchivePanelOptionsCard">
                <SplineThicknessKeyFrame KeyTime="00:00:00" Value="0,134,51,0"/>
                <SplineThicknessKeyFrame KeyTime="00:00:01" Value="0,134,310,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="btn_MenuOpen">
            <BeginStoryboard Storyboard="{StaticResource MenuOpen}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="btn_MenuClose">
            <BeginStoryboard Storyboard="{StaticResource MenuClose}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid Background="LightGray">
        <Grid x:Name="grd_ControlPanel" Visibility="Visible" Margin="60,60,0,0">
            <Grid Height="60" Background="#FF1A237E" VerticalAlignment="Top">
                <TextBlock Text="Panel sterowania" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0" />
            </Grid>
            <Grid Height="30" Margin="0,60,0,0" Background="Red" Visibility="{Binding Visibility, UpdateSourceTrigger=PropertyChanged}" DataContext="{x:Reference tbl_ControlPanelAllert}" VerticalAlignment="Top">
                <materialDesign:PackIcon Kind="AlertOutline" Height="25" Width="25" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Black" Margin="5,0,0,0"/>
                <TextBlock FontSize="18" Foreground="Black" VerticalAlignment="Center" TextAlignment="Center" x:Name="tbl_ControlPanelAllert" HorizontalAlignment="Left" Margin="35,0" Visibility="Hidden"/>
            </Grid>
            <materialDesign:Card Background="#FF1A237E" Width="280" Height="280" Margin="10,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" UniformCornerRadius="10">
                <Grid>
                    <xrpb:RadialProgressBar Value="100" VerticalAlignment="Top" HorizontalAlignment="Left" Width="280" Height="280" Foreground="#FFE1E5FF" BorderBrush="#FF1A237E"/>
                    <xrpb:RadialProgressBar x:Name="rpb_ControlPanelProgressBar" Value="0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="280" Height="280" Foreground="GreenYellow" BorderBrush="#FF1A237E"/>
                    <TextBlock x:Name="tbl_ControlPanelProgressValue" TextAlignment="Center" Margin="20,100,20,120" Foreground="White" FontSize="60" Width="220"/>
                    <TextBlock Text="Status transferu" FontSize="26" TextAlignment="Center" Margin="20,180,20,60" Width="220" Foreground="White"/>
                </Grid>
            </materialDesign:Card>

            <materialDesign:Card Background="#FF1A237E" Width="710" Height="140" Margin="10,390,0,10" VerticalAlignment="Top" HorizontalAlignment="Left" UniformCornerRadius="10">
                <Grid>
                    <materialDesign:PackIcon Kind="FileEdit" Height="30" Width="30" VerticalAlignment="Top" Margin="5,10,0,0"/>
                    <materialDesign:PackIcon Kind="FolderOpen" Height="30" Width="30" VerticalAlignment="Top" Margin="5,50,0,0"/>
                    <materialDesign:PackIcon Kind="FileCode" Height="30" Width="30" VerticalAlignment="Top" Margin="5,90,0,0"/>
                    <TextBlock Text="Nazwa pliku:" FontSize="26" Margin="35,10,0,0" Height="30" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto"  Margin="190,18,10,0" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock x:Name="tbl_ControlPanelFileName" FontSize="18" Text=""/>
                    </ScrollViewer>
                    <TextBlock Text="Lokalizacja:" FontSize="26" Margin="35,50,0,0" Height="30" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto"  Margin="180,58,10,0" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock x:Name="tbl_ControlPanelFileLocation" FontSize="18"/>
                    </ScrollViewer>
                    <TextBlock Text="Rozmiar pliku:" FontSize="26" Margin="35,90,0,0" Height="30" Width="170" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="tbl_ControlPanelFileSize" FontSize="18" Margin="210,98,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <Button x:Name="btn_ControlPanelChangeZIP" Content="{materialDesign:PackIcon DotsHorizontal}" ToolTip="Icon" Margin="0,100,10,10" Height="30" Width="60" VerticalAlignment="Top" HorizontalAlignment="Right" Background="#FF3D5AFE" BorderBrush="#FF3D5AFE" materialDesign:ButtonAssist.CornerRadius="10" Click="btn_ControlPanelChangeZIP_Click" Cursor="Hand"/>
                </Grid>
            </materialDesign:Card>

            <materialDesign:Card Background="#FF1A237E" Width="710" Height="280" Margin="300,100,10,160" VerticalAlignment="Top" HorizontalAlignment="Left" UniformCornerRadius="10">
                <Grid>
                    <TextBlock Text="Informacje o kliencie:" FontSize="36" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                    
                    <materialDesign:PackIcon Kind="AccountBox" Height="30" Width="30" VerticalAlignment="Top" Margin="5,75,0,0"/>
                    <TextBlock Text="Użytkownik:" FontSize="26" Margin="35,75,0,0" Height="30" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="tbl_ControlPanelUserName" FontSize="18" Margin="180,83,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <materialDesign:PackIcon Kind="AccountSearch" Height="30" Width="30" VerticalAlignment="Top" Margin="5,115,0,0"/>
                    <TextBlock Text="Hostname:" FontSize="26" Margin="35,115,0,0" Height="30" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="tbl_ControlPanelHostName" FontSize="18" Margin="170,123,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"/>

                    <materialDesign:PackIcon Kind="FolderCog" Height="30" Width="30" VerticalAlignment="Top" Margin="5,155,0,0"/>
                    <Button x:Name="btn_ControlPanelChangeFilePath" Click="btn_ControlPanelChangeFilePath_Click" Height="30" Width="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,155,0,0" Background="{x:Null}" BorderBrush="{x:Null}" Cursor="Hand"/>
                    <TextBlock Text="Miejsce zapisu:" FontSize="26" Margin="35,155,0,0" Height="30" Width="180" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto"  Margin="220,163,10,0" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock x:Name="tbl_ControlPanelSavePath" FontSize="18"/>
                    </ScrollViewer>

                    <materialDesign:PackIcon Kind="Connection" Height="30" Width="30" VerticalAlignment="Top" Margin="5,195,0,0"/>
                    <TextBlock Text="Status połączenia:" FontSize="26" Margin="35,195,0,0" Height="30" Width="220" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="tbl_ControlPanelConnectionStatus" FontSize="18" Margin="260,203,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Text="Niepołączony."/>
                    
                    <materialDesign:PackIcon Kind="PlusNetwork" Height="30" Width="30" VerticalAlignment="Top" Margin="5,235,0,0"/>
                    <TextBlock Text="Aktywny tryb pracy:" FontSize="26" Margin="35,235,0,11" Height="30" Width="230" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="tbl_ControlPanelClient" FontSize="18" Margin="265,243,0,0" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Text="Oczekiwanie na nawiązanie połączenia z serwerem."/>
                </Grid>
            </materialDesign:Card>

            <materialDesign:Card Background="#FF1A237E" Width="280" Height="140" Margin="730,390,10,10" VerticalAlignment="Top" HorizontalAlignment="Left" UniformCornerRadius="10">
                <Grid>
                    <materialDesign:Badged Badge="{materialDesign:PackIcon LanDisconnect}" BadgeColorZoneMode="Custom" BadgeBackground="#FF3D5AFE" BadgeForeground="White" Margin="13,40,0,0" Background="{x:Null}" BorderBrush="#FF3D5AFE">
                        <Button x:Name="btn_ControlPanelClientStop" Content="Rozłącz" Background="#FF3D5AFE" BorderBrush="#FF3D5AFE" FontSize="18" Height="60" Width="120" materialDesign:ButtonAssist.CornerRadius="10" Click="btn_ConfigurationDisconnect_Click" IsEnabled="False"/>
                    </materialDesign:Badged>

                    <materialDesign:Badged Badge="{materialDesign:PackIcon FileSendOutline}" BadgeColorZoneMode="Custom" BadgeBackground="#FF3D5AFE" BadgeForeground="White" Margin="150,40,13,13" Background="{x:Null}" BorderBrush="#FF3D5AFE">
                        <Button x:Name="btn_ControlPanelClientSend" Content="Wyślij plik" Background="#FF3D5AFE" BorderBrush="#FF3D5AFE" FontSize="18" Height="60" Width="120" materialDesign:ButtonAssist.CornerRadius="10" Click="btn_ControlPanelClientSend_Click" Cursor="Hand" IsEnabled="False"/>
                    </materialDesign:Badged>
                </Grid>
            </materialDesign:Card>

        </Grid>

        <Grid x:Name="grd_Configuration" Visibility="Collapsed" Margin="60,60,0,0">
            <StackPanel>
                <Grid Height="60" Background="#FF1A237E">
                    <TextBlock Text="Ustawienia aplikacji" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0" />
                </Grid>
                <Grid Height="30" Margin="0" Background="Red" Visibility="{Binding Visibility, UpdateSourceTrigger=PropertyChanged}" DataContext="{x:Reference tbl_ConfigurationAllert}">
                    <materialDesign:PackIcon Kind="AlertOutline" Height="25" Width="25" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Black" Margin="5,0,0,0"/>
                    <TextBlock FontSize="18" Foreground="Black" VerticalAlignment="Center" TextAlignment="Center" x:Name="tbl_ConfigurationAllert" HorizontalAlignment="Left" Margin="35,0" Visibility="Hidden"/>
                </Grid>
            </StackPanel>
            <materialDesign:Card Background="#FF1A237E" VerticalAlignment="Top" HorizontalAlignment="Left" UniformCornerRadius="10"  Margin="10,120,0,10" Height="410" Width="480">
                <Grid>
                    <TextBlock Text="Dane użytkownika" FontSize="36" Margin="0,25" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                    
                    <materialDesign:PackIcon Kind="Account" VerticalAlignment="Top" Margin="15,85,0,0" Height="30" Width="30"/>
                    <TextBlock Text="Imię:" FontSize="26" Margin="45,85,0,0" Height="30" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txt_ConfigurationName" materialDesign:HintAssist.Hint="Imię" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" Width="250" FontSize="18" SelectionBrush="#FF3D5AFE" Margin="110,70,10,0" CaretBrush="#FF3D5AFE" Cursor="IBeam" materialDesign:TextFieldAssist.UnderlineBrush="#FF3D5AFE" materialDesign:HintAssist.Foreground="#FF3D5AFE" SelectionTextBrush="#FF3D5AFE"/>

                    <materialDesign:PackIcon Kind="AccountTie" VerticalAlignment="Top" Margin="15,135,0,0" Height="30" Width="30"/>
                    <TextBlock Text="Nazwisko:" FontSize="26" Margin="45,135,0,0" Height="30" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txt_ConfigurationSurname" materialDesign:HintAssist.Hint="Nazwisko" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" Width="250" FontSize="18" SelectionBrush="#FF3D5AFE" Margin="170,120,10,0" CaretBrush="#FF3D5AFE" Cursor="IBeam" materialDesign:TextFieldAssist.UnderlineBrush="#FF3D5AFE" materialDesign:HintAssist.Foreground="#FF3D5AFE" SelectionTextBrush="#FF3D5AFE"/>

                    <materialDesign:PackIcon Kind="AccountGroup" VerticalAlignment="Top" Margin="15,185,0,0" Height="30" Width="30"/>
                    <TextBlock Text="Grupa:" FontSize="26" Margin="45,185,0,0" Height="30" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txt_ConfigurationGroup" materialDesign:HintAssist.Hint="Grupa" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" Width="250" FontSize="18" SelectionBrush="#FF3D5AFE" Margin="130,170,10,0" CaretBrush="#FF3D5AFE" Cursor="IBeam" materialDesign:TextFieldAssist.UnderlineBrush="#FF3D5AFE" materialDesign:HintAssist.Foreground="#FF3D5AFE" SelectionTextBrush="#FF3D5AFE"/>

                    <materialDesign:PackIcon Kind="BadgeAccount" VerticalAlignment="Top" Margin="15,235,0,0" Height="30" Width="30"/>
                    <TextBlock Text="Sekcja:" FontSize="26" Margin="45,235,0,0" Height="30" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txt_ConfigurationSection" materialDesign:HintAssist.Hint="Sekcja" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" Width="250" FontSize="18" SelectionBrush="#FF3D5AFE" Margin="135,220,10,0" CaretBrush="#FF3D5AFE" Cursor="IBeam" materialDesign:TextFieldAssist.UnderlineBrush="#FF3D5AFE" materialDesign:HintAssist.Foreground="#FF3D5AFE" SelectionTextBrush="#FF3D5AFE"/>

                    <materialDesign:PackIcon Kind="Counter" VerticalAlignment="Top" Margin="15,285,0,0" Height="30" Width="30"/>
                    <TextBlock Text="Wersja:" FontSize="26" Margin="45,285,0,0" Height="30" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txt_ConfigurationVersion" materialDesign:HintAssist.Hint="Wersja" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" Width="250" FontSize="18" SelectionBrush="#FF3D5AFE" Margin="135,270,10,0" CaretBrush="#FF3D5AFE" Cursor="IBeam" materialDesign:TextFieldAssist.UnderlineBrush="#FF3D5AFE" materialDesign:HintAssist.Foreground="#FF3D5AFE" SelectionTextBrush="#FF3D5AFE"/>

                    <CheckBox x:Name="cbx_ConfigurationSection" Background="#FF3D5AFE" Foreground="#FF1A237E" BorderBrush="#FF3D5AFE" Margin="15,335,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignAccentCheckBox}" Width="30" Height="30" IsChecked="True"/>
                    <TextBlock Text="Aktywna sekcja" FontSize="20" Margin="45,340,0,0" Height="30" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left"/>

                    <CheckBox x:Name="cbx_ConfigurationVersion" Background="#FF3D5AFE" Foreground="#FF1A237E" BorderBrush="#FF3D5AFE" Margin="215,335,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignAccentCheckBox}" Width="30" Height="30" IsChecked="True"/>
                    <TextBlock Text="Aktywna wersja" FontSize="20" Margin="245,340,0,0" Height="30" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </Grid>
            </materialDesign:Card>

            <materialDesign:Card Background="#FF1A237E" VerticalAlignment="Top" HorizontalAlignment="Left" UniformCornerRadius="10"  Margin="500,120,10,10" Height="300" Width="510">
                <Grid>
                    <TextBlock Text="Ustawienia połączenia" FontSize="36" Margin="0,25" VerticalAlignment="Top" HorizontalAlignment="Center"/>

                    <!--<materialDesign:PackIcon Kind="CardAccountDetails" VerticalAlignment="Top" Margin="10,85,0,0" Height="30" Width="30"/>
                    <TextBlock Text="ID klienta:" FontSize="26" Margin="45,85,0,0" Height="30" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock x:Name="tbl_ConfigurationUserID" FontSize="26" Margin="170,85,0,0" Height="30" Width="325" VerticalAlignment="Top" HorizontalAlignment="Left"/>-->

                    <materialDesign:PackIcon Kind="Ip" VerticalAlignment="Top" Margin="15,85,0,0" Height="30" Width="30"/>
                    <TextBlock Text="Adres IP Serwera:" FontSize="26" Margin="45,85,0,0" Height="30" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txt_ConfigurationIP" materialDesign:HintAssist.Hint="Adres IP serwera" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" Width="250" FontSize="18" SelectionBrush="#FF3D5AFE" Margin="250,70,10,0" CaretBrush="#FF3D5AFE" Cursor="IBeam" materialDesign:TextFieldAssist.UnderlineBrush="#FF3D5AFE" materialDesign:HintAssist.Foreground="#FF3D5AFE" SelectionTextBrush="#FF3D5AFE"/>

                    <materialDesign:PackIcon Kind="Connection" VerticalAlignment="Top" Margin="15,135,0,0" Height="30" Width="30"/>
                    <TextBlock Text="Port komunikacji:" FontSize="26" Margin="45,135,0,0" Height="30" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBox x:Name="txt_ConfigurationPort" materialDesign:HintAssist.Hint="Port komunikacji" Style="{StaticResource MaterialDesignFloatingHintTextBox}" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="White" Width="250" FontSize="18" SelectionBrush="#FF3D5AFE" Margin="250,120,10,0" CaretBrush="#FF3D5AFE" Cursor="IBeam" materialDesign:TextFieldAssist.UnderlineBrush="#FF3D5AFE" materialDesign:HintAssist.Foreground="#FF3D5AFE" SelectionTextBrush="#FF3D5AFE"/>

                    <materialDesign:PackIcon Kind="Buffer" VerticalAlignment="Top" Margin="15,190,0,0" Height="30" Width="30"/>
                    <TextBlock Text="Rozmiar buffora:" FontSize="26" Margin="45,190,0,0" Height="30" Width="290" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ComboBox x:Name="cmb_ConfigurationBuffer" materialDesign:HintAssist.Hint="Rozmiar buffora" Style="{DynamicResource MaterialDesignOutlinedComboBox}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="170,180,0,0" FontSize="20" Foreground="White" Background="#FF1A237E" materialDesign:TextFieldAssist.UnderlineBrush="#FF3D5AFE" materialDesign:HintAssist.Foreground="#FF3D5AFE" materialDesign:HintAssist.Background="#FF1A237E" IsReadOnly="True" >
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ComboBoxItem}">
                                <Setter Property="Foreground" Value="Black"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBoxItem Content="512" />
                        <ComboBoxItem Content="1024" />
                        <ComboBoxItem Content="2048" />
                        <ComboBoxItem Content="4096" />
                    </ComboBox>

                    <materialDesign:PackIcon Kind="FolderCog" Height="30" Width="30" VerticalAlignment="Top" Margin="15,245,0,0"/>
                    <Button x:Name="btn_ConfigurationSetSavePath" Height="30" Width="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,245,0,0" Background="{x:Null}" BorderBrush="{x:Null}" Click="btn_ConfigurationSetSavePath_Click" Cursor="Hand"/>
                    <TextBlock Text="Miejsce zapisu:" FontSize="26" Margin="45,245,0,0" Height="30" Width="190" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto"  Margin="230,250,10,0" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBlock x:Name="tbl_ConfigurationSavePath" FontSize="20"/>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>

            <materialDesign:Card Background="#FF1A237E" VerticalAlignment="Top" HorizontalAlignment="Left" UniformCornerRadius="10"  Margin="500,430,10,10" Height="100" Width="510">
                <Grid>
                     <Button x:Name="btn_ConfigurationSave" Content="Zapisz ustawienia" Background="#FF3D5AFE" BorderBrush="#FF3D5AFE" FontSize="18" Height="50" Width="200" materialDesign:ButtonAssist.CornerRadius="10" Click="btn_ConfigurationSave_Click" Cursor="Hand" Margin="30,25" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                    <Button x:Name="btn_ConfigurationConnect" Content="Połącz z serwerem" Background="#FF3D5AFE" BorderBrush="#FF3D5AFE" FontSize="18" Height="50" Width="200" materialDesign:ButtonAssist.CornerRadius="10" Click="btn_ConfigurationConnect_Click" Cursor="Hand" Margin="30,25" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                    <Button x:Name="btn_ConfigurationDisconnect" Content="Rozłącz z serwerem" Background="#FF3D5AFE" BorderBrush="#FF3D5AFE" FontSize="18" Height="50" Width="200" materialDesign:ButtonAssist.CornerRadius="10" Click="btn_ConfigurationDisconnect_Click" Cursor="Hand" Margin="30,25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Visibility="Collapsed" IsEnabled="False"/>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <Grid x:Name="grd_ArchivePanelCreate" Visibility="Collapsed" Margin="60,60,0,0">
            <StackPanel>
                <Grid Height="60" Background="#FF1A237E">
                    <TextBlock Text="Tworzenie Archiwum" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0" />
                </Grid>
                <Grid Height="30" Margin="0" Background="Red" Visibility="{Binding Visibility, UpdateSourceTrigger=PropertyChanged}" DataContext="{x:Reference tbl_ArchivePanelAllert}">
                    <materialDesign:PackIcon Kind="AlertOutline" Height="25" Width="25" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Black" Margin="5,0,0,0"/>
                    <TextBlock FontSize="18" Foreground="Black" VerticalAlignment="Center" TextAlignment="Center" x:Name="tbl_ArchivePanelAllert" HorizontalAlignment="Left" Margin="35,0" Visibility="Hidden" />
                </Grid>
            </StackPanel>

            <Grid>
                <Grid x:Name="grd_ArchivePanelCreateOptions" Width="40" Margin="460,126,10,120">
                    <Button x:Name="btn_ArchivePanelCreateOptions" Style="{StaticResource MaterialDesignRaisedAccentButton}" Height="288" materialDesign:ButtonAssist.CornerRadius="0 25 25 0" ToolTip="Wbierz pliki, które zostaną dodane do listy." Cursor="Hand" Background="#FF3D5AFE" Foreground="White" BorderBrush="#FF3D5AFE" materialDesign:RippleAssist.IsDisabled="True" Click="btn_ArchivePanelCreateOptions_Click" Command="{Binding}">
                        <TextBlock Text="Opcje tworzenia" Margin="-10,0,-10,0" FontSize="20">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="90"/>
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </Button>
                </Grid>

                <materialDesign:Flipper x:Name="flp_ArchivePanelOptionsCard" Visibility="Visible" Margin="0,134,310,0" Width="250" Height="346" VerticalAlignment="Top" HorizontalAlignment="Right" materialDesign:ShadowAssist.ShadowDepth="Depth3" IsEnabled="True">
                    <materialDesign:Flipper.FrontContent >
                        <Grid Background="#FF3D5AFE" materialDesign:ShadowAssist.ShadowDepth="Depth3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="280" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <materialDesign:ColorZone Mode="PrimaryLight" VerticalAlignment="Stretch" Background="#FF1A237E">
                                <Grid>
